{%- from "macros/date-and-readtime.njk" import dateAndReadtime -%}

<article class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
    {%- if post.data.header.teaser -%}
    <div class="h-64 mb-2 overflow-hidden rounded-md cover-img">
        <a href="{{ post.url | url }}" rel="permalink" title="{{ post.data.title }}">
        {# thumbnail #}
        {% cloudinary post.data.header.teaser, "", "thumbnail" %}
        </a>
    </div>
    {%- endif -%}

    <div class="flex flex-wrap my-1">
        {% for category in post.data.categories %}
        <div class="pr-4 font-semibold text-gray-500">
            <a href="{#{ category | slugify | prepend: 'category/' | append: '/' | relative_url }#}" title="Kategorie {{category}}" class="hover:underline">{{ category }}</a>
        </div>
        {% endfor %}
    </div>

    <h1 class="text-lg md:text-xl lg:text-2xl text-red-900 mb-2"><a href="{{ post.url | url }}" rel="permalink" title="{{post.data.title}}">{{ post.data.title }}</a></h1>

    <div>
        <div>
            {% if post.data.show_meta_data %}<div class="text-gray-500 text-xs md:text-sm mb-2 flex flex-col">{{ dateAndReadtime(post.date, post.data.content) }}</div>{% endif %}
            <p class="hidden md:block">{{ post | excerpt }}</p>
        </div>
    </div>
</article>