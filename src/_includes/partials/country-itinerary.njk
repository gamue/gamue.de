{%- if itinerary -%}
    {%- if itinerary_title -%}
        {%- set headline = itinerary_title -%}
    {%- else -%}
        {%- set headline = 'Stationen' -%}
    {%- endif -%}
<article class="text-gray-700">
    <h2 class="mb-2">{{ headline }}</h2>
    <article class="flex flex-wrap">
        {%- for place in itinerary -%}
            {%- set teaser = place.image -%}
            <article class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
                {% if teaser %}
                <div class="h-64 mb-2 overflow-hidden rounded-md cover-img">
                    {# TODO thumbnail #}
                    {% cloudinary teaser, null, null, "thumbnail" %}
                </div>
                {% endif %}
                <h1 class="mb-2 text-lg md:text-xl lg:text-2xl">{{ place.name }}</h1>
                <p class="hidden md:block">{{ place.description }}</p>
            </article>
        {%- endfor -%}
    </article>
</article>
{%- endif -%}